// de celsius para fahrenheit formula: F=1.8*C+32
// de fahrenheit para celsius formula: C=(F-32)/1.8

	float celparafah(float celsius){
		return 1.8*celsius+32;
	}
	float fahparacel(float fah){
		return (fah-32)/1.8;
	}
	
	
